<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.endeavor.demo.dao.DepartmentMapper">
    <insert id="insertDept" parameterType="Department">
        insert into department
        <trim prefix="(" suffix=")" suffixOverrides=",">
            id,
            <if test="type != null">
                type,
            </if>
            <if test="name != null">
                name,
            </if>
            createtime,
            updatetime,
            parentId,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            #{id,jdbcType=INTEGER},
            <if test="type != null">
                #{type,jdbcType=VARCHAR},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            NOW(),
            NOW(),
            3,
        </trim>
    </insert>
    <select id="findId" parameterType="String" resultType="int">
        select id from department where type = #{type,jdbcType=VARCHAR}
    </select>
    <update id="update" parameterType="Department">
        update department
        set
            name = #{name,jdbcType=VARCHAR},
            type = #{type,jdbcType=VARCHAR},
            updatetime = NOW()
            where  id = #{id,jdbcType=INTEGER}
    </update>
</mapper>